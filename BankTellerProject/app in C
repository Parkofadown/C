	}
	
	printf("\n\n\t\t\t\t\t\tThere are %d accounts\n",accountCount);
	for ( i = 0; i < 1000; i++)
	{
	sum = sum + accounts[i].balance;
	}
	printf("\n\n\t\t\t\t\t\tThe total values of the accounts is %d\n", sum);
	system("PAUSE");
